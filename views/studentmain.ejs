<div class="container mt-5">
 <center> <h1>Student page</h1></center><br>
 <center><h1>Edit your profile</h1></center>
  

  <div class="row">
    <div class="col-sm-8">
      <div class="card"  style="margin-left: 40%; margin-right: -10%;">
        <div class="card-body" style="box-shadow: 1px 1px 10px 0px black;">

          <!-- Makes POST request to /login route -->
          <form action="/edit" method="POST">
            
            <div class="form-group">
              <label for="text">Register number(YOU CANOT CHANGE REGISTER NUMBER)</label>
              <input type="text" class="form-control" name="reg" disabled><%= fines.RegNo %></input>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required disabled>
            </div>
            <div class="form-group">
              <label for="name">Student Name</label>
              <input type="text" class="form-control" name="studentname" required>
            </div>
            <div class="form-group">
              <label for="course">course</label>
              <input type="text" class="form-control" name="course" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>
            <a class="btn btn-light" style="background-color: rgb(223, 102, 102);" href="/" role="button">Log Out</a>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

        </div>
      </div>
    </div>

